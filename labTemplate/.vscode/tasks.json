{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lsensehat-c++",
                "-lpng",
                "-li2c",
                "-lm",
                "-lRTIMULib",
                "-lgpiod"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc" // Use the GCC problem matcher
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Set this task as the default build task
            },
            "detail": "Task generated by Debugger."
        }
    ]
}