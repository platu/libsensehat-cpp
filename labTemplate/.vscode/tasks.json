{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g", // Enable debugging information
                "${file}", // Source file to compile
                "-o", // Output the executable to the same directory as the source file
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lsensehat-c++", // Link with Sense HAT C++ library
                "-lpng",  // Link with PNG library
                "-li2c",  // Link with I2C library
                "-lm", // Link with math library
                "-lRTIMULib", // Link with RTIMULib library
                "-lgpiod" // Link with gpiod library
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc" // Use the GCC problem matcher
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Set this task as the default build task
            },
            "detail": "Task generated by Debugger."
        }
    ]
}